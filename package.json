{
    "name": "@topmarksdevelopment/hover-box",
    "description": "A compact tool to reveal information on hover",
    "author": "TopMarksDevelopment",
    "version": "2.0.0",
    "license": "MIT",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "exports": {
        ".": {
            "import": "./lib/index.m.js",
            "require": "./lib/index.cjs",
            "types": "./lib/index.d.ts",
            "default": "./lib/index.js"
        }
    },
    "keywords": [
        "hover over",
        "hover reveal",
        "vanilla js hover",
        "pop out"
    ],
    "homepage": "https://github.com/TopMarksDevelopment/Javascript.HoverBox#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/TopMarksDevelopment/javascript.hoverbox.git"
    },
    "bugs": {
        "url": "https://github.com/TopMarksDevelopment/Javascript.HoverBox/issues"
    },
    "files": [
        "lib/**",
        "package-lock.json"
    ],
    "scripts": {
        "test": "jest --runInBand",
        "build": "rollup --bundleConfigAsCjs -c rollup.config.js",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "eslint ./src --ext .ts",
        "prepublishOnly": "npm run lint"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^23.0.7",
        "@rollup/plugin-node-resolve": "^15.0.1",
        "@rollup/plugin-terser": "^0.2.1",
        "@rollup/plugin-typescript": "^10.0.1",
        "@types/jest": "^29.2.4",
        "@typescript-eslint/eslint-plugin": "^5.47.0",
        "@typescript-eslint/parser": "^5.47.0",
        "eslint": "^8.30.0",
        "jest": "^29.3.1",
        "prettier": "^2.8.1",
        "rollup": "^3.8.0",
        "ts-jest": "^29.0.3",
        "typescript": "^4.9.4"
    },
    "dependencies": {
        "@topmarksdevelopment/position": "^1.0.0",
        "jest-environment-jsdom": "^29.3.1"
    }
}
