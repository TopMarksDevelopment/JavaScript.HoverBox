{
    "name": "@topmarksdevelopment/hover-box",
    "description": "A compact tool to reveal information on hover",
    "author": "TopMarksDevelopment",
    "version": "2.0.1",
    "license": "MIT",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "exports": {
        ".": {
            "import": "./lib/index.m.js",
            "require": "./lib/index.cjs",
            "types": "./lib/index.d.ts",
            "default": "./lib/index.js"
        }
    },
    "keywords": [
        "hover over",
        "hover reveal",
        "vanilla js hover",
        "pop out"
    ],
    "homepage": "https://github.com/TopMarksDevelopment/Javascript.HoverBox#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/TopMarksDevelopment/javascript.hoverbox.git"
    },
    "bugs": {
        "url": "https://github.com/TopMarksDevelopment/Javascript.HoverBox/issues"
    },
    "files": [
        "lib/**",
        "package-lock.json"
    ],
    "scripts": {
        "test": "jest --runInBand",
        "build": "rollup --bundleConfigAsCjs -c rollup.config.js",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "eslint ./src --ext .ts",
        "prepublishOnly": "npm run lint"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^25.0.7",
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@rollup/plugin-terser": "^0.4.4",
        "@rollup/plugin-typescript": "^11.1.5",
        "@types/jest": "^29.5.8",
        "@typescript-eslint/eslint-plugin": "^6.11.0",
        "@typescript-eslint/parser": "^6.11.0",
        "eslint": "^8.53.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "prettier": "^3.1.0",
        "rollup": "^4.4.1",
        "ts-jest": "^29.1.1",
        "typescript": "^5.2.2"
    },
    "dependencies": {
        "@topmarksdevelopment/position": "^1.0.1"
    }
}
